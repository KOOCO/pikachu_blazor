@page "/"
@using Kooco.Pikachu.Blazor.Pages.Dashboard
@using Volo.Abp.MultiTenancy
@inherits PikachuComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]
<Div>
    @if (!CurrentUser.IsAuthenticated)
    {
        <div class="container">
            <div class="p-5 text-center">
                <Badge Color="Color.Success" class="mb-4">
                    <h5 class="m-1"> <i class="fas fa-rocket"></i> 太好了, <strong>GoodPoint</strong> 正在運行中!</h5>
                </Badge>

                <h1>歡迎來到GoodPoint!</h1>

                <p class="lead px-lg-5 mx-lg-5"></p>

                @if (!CurrentUser.IsAuthenticated)
                {
                    <a class="btn btn-primary" href="Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
                }

            </div>
        </div>
    }

    else
    {
        <Dashboard></Dashboard>
    }
</Div>

