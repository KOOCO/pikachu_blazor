                @if (Orders.Where(x => x.IsSelected).Count() != 1)
                {
                    <Button Type="@ButtonType.Button" disabled Class="ms-1 btn btn-sm btn-primary">
                        <i class="fa fa-print"></i>
                        @L["CloseOrder"]
                    </Button>
                }
                else
                {
                    <Button Type="@ButtonType.Button" Class="ms-1 btn btn-sm btn-primary">
                        <i class="fa fa-print"></i>
                        @L["CloseOrder"]
                    </Button>
