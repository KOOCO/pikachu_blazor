                {
                    <Button Type="@ButtonType.Button"
                            Clicked="OnGenerateDeliveryNumber"
                            Class="ms-1 btn btn-sm btn-primary">
                        <i class="fa fa-print" />
                        @L["GenerateDeliveryNumber"]
