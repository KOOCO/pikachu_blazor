@inherits PikachuComponentBase
@inject IJSRuntime JSRuntime

<Row>
    <Column ColumnSize="ColumnSize.Is12.Is8.OnFullHD">
        <Card>
            <CardBody>
                @if (Loading)
                {
                    <SkeletonTable Rows="5" Columns="1"></SkeletonTable>
                }
                <Div id="@BarChartId" Display="Loading ? Display.None : Display.Block"></Div>
            </CardBody>
        </Card>
    </Column>
    <Column ColumnSize="ColumnSize.Is12.Is4.OnFullHD">
        <Card>
            <CardBody>
                @if (Loading)
                {
                    <SkeletonTable Rows="5" Columns="1"></SkeletonTable>
                }
                <Div id="@DonutChartId" Display="Loading ? Display.None : Display.Block"></Div>
            </CardBody>
        </Card>
    </Column>
</Row>
